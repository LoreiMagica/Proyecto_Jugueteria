<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_nuevoJuguete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nuevo juguete"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Nombre:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nuevoJuguete" />

    <TextView
        android:id="@+id/tv_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="Nombre:"
        android:text="Url Imagen:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre" />

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="Nombre:"
        android:text="Precio:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_imagen" />

    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:hint="Nombre:"
        android:text="Descripción:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_precio" />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Introduce nombre"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_nombre"
        app:layout_constraintStart_toStartOf="@+id/et_imagen"
        app:layout_constraintTop_toTopOf="@+id/tv_nombre" />

    <EditText
        android:id="@+id/et_imagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Introduce Url de imagen"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_imagen"
        app:layout_constraintStart_toStartOf="@+id/et_imagen2"
        app:layout_constraintTop_toTopOf="@+id/tv_imagen" />

    <EditText
        android:id="@+id/et_imagen2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Introduce un precio"
        android:textSize="18sp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/tv_precio"
        app:layout_constraintStart_toStartOf="@+id/et_descripcion"
        app:layout_constraintTop_toTopOf="@+id/tv_precio" />

    <EditText
        android:id="@+id/et_descripcion"
        android:layout_width="258dp"
        android:layout_height="143dp"
        android:layout_marginStart="16dp"
        android:gravity="top"
        android:hint="Introduce una descripción del producto"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_descripcion"
        app:layout_constraintTop_toTopOf="@+id/tv_descripcion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Añadir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_descripcion" />
</androidx.constraintlayout.widget.ConstraintLayout>